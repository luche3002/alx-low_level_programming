#include "main.h"

/**
 * print_square - Prints a square in the terminal
 * @size: The size of the square
 *
 * Return: A square in the terminal
 */

void print_square(int size)
{
	int x;
	int y;

	if (size <= 0)
	{
		_putchar ('\n');
	}
	else
	{
		for (x = 0; x < size; x++)
		{
			for (y = 0; y < size; y++)
			{
				_putchar ('#');
			}
			_putchar ('\n');
		}
	}
	_putchar ('\n');
}
